
.hook {
  display: block;
  content: "";
  height: 350px;
  width: 500px;
  padding: 0 30% 0 80px;
  background-image: url( <%= asset_path 'hook2.svg' %> ), url( <%= asset_path 'hook2.svg' %>);
  background-repeat: no-repeat, no-repeat;
  background-position: bottom center, bottom right;
}

div.article::before {
  display: block;
  margin: 10px 0 10px 0;
  height: 2em;
  content: "";
}

div.article {
  padding:  2% 0% 3% 0;
  background: url(<%= asset_path 'layer.svg' %>) center;
  margin: 0 25% 3% 25%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: top center;
}

div.article h2,
div.article p {
  padding: 0 15px 0 15px;
  text-transform: none;
  text-align: left;
  margin: 0 15% 0 15%;
}

p.date {
  text-align: left;
  font-size: 0.8em;
  margin: 0 15% 0 15%;

}
