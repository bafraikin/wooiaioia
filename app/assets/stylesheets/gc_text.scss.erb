div.article {
  -ms-overflow-style: none;  // IE 10+
  overflow: -moz-scrollbars-none;  // Firefox
}
div.article::-webkit-scrollbar { 
  display: none;  // Safari and Chrome
}
div.carrot::-webkit-scrollbar { 
  display: none;  // Safari and Chrome
}

div.blank {
  display: block;
  width: 100%;
  height: 60px; 
}

div.carrot {
  z-index: -1;
  font-family: "champagne";
  font-size: 1vw;
  position: relative;
  padding-top: 16vw;
  & h1, & p{
    position: relative;
    top: 0vw;
  }
  & h1 {
    text-overflow: ellipsis;
    overflow: hidden;
    width: 42%;
    white-space: nowrap;
  }
  & p {
    text-shadow: 0 0.2px black;
  }
  & p.desc {
    width: 36%;
    font-size: 2vw;
    top: -1vw;
  }
  & p.date {
    font-size: 1.5vw;
    top: 0vw;
  }
}

div.carrot.carrot_right::before {
  content: "";
  background: url("<%= image_path 'carrot.png' %>") no-repeat center center;
  transform: rotate(104deg);
  position: fixed;
  -webkit-filter: brightness(1.8);
  filter: brightness(1.8); 
  background-size: 60vw;
}

div.carrot.carrot_left::before {
  content: "";
  background: url("<%= image_path 'carrot.png' %>") no-repeat center center;
  transform: rotate(-104deg);
  position: fixed;
  -webkit-filter: brightness(1.8);
  filter: brightness(1.8); 
  background-size: 60vw;
}


div.carrot::before {
  width: 100%;
  position: fixed;
  z-index: -10;
  display: block;
  height: 150vw;
  top: -50vw;
}

div.carrot.carrot_right::before {
  right: -19vw;
}

div.carrot.carrot_left::before {
  right: 17vw;
}

div.carrot_left {
  text-align: left;
  padding-left: 25vw;
  & p {
    padding-left: 3vw;
  }
  & h1 {
    left: 2vw;
  }
}

div.carrot_right {
  text-align: right;
  padding-right: 22vw;
  & p {
    padding-right: 5vw;
  }
  & p.desc {
    padding-left: 45vw;
  }
  & h1 {
    left: 43vw;
  }
}


