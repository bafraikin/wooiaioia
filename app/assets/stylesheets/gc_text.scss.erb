div.article {
  -ms-overflow-style: none;  // IE 10+
  overflow: -moz-scrollbars-none;  // Firefox
}
div.article::-webkit-scrollbar { 
  display: none;  // Safari and Chrome
}
div.carrot::-webkit-scrollbar { 
  display: none;  // Safari and Chrome
}


div.blank {
  display: block;
width: 100%;
height: 60px; 

}

div.carrot {
  z-index: -1;
}

div.carrot.carrot_right::before {
  content: "";
  background: url("<%= image_path 'carrot.png' %>") no-repeat center center;
  transform: rotate(104deg);
  position: fixed;
  -webkit-filter: brightness(1.8);
  filter: brightness(1.8); 
}

div.carrot.carrot_left::before {
  content: "";
  background: url("<%= image_path 'carrot.png' %>") no-repeat center center;
  transform: rotate(-104deg);
  position: fixed;
  -webkit-filter: brightness(1.8);
  filter: brightness(1.8); 
}
